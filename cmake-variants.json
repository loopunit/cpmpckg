{
    "build_type": {
        "default": "debug",
        "description": "The CMake build type to use",
        "choices": {
            "debug": {
                "short": "Debug",
                "long": "Debug",
                "buildType": "Debug",
                "settings": {
                    "CPM_RUNTIME_CACHE" : "${userHome}\\dev\\.cpm-runtime-cache\\x64-Debug"
                }
            },
            "release": {
                "short": "Release",
                "long": "Release",
                "buildType": "Release",
                "settings": {
                    "CPM_RUNTIME_CACHE" : "${userHome}\\dev\\.cpm-runtime-cache\\x64-Release"
                }
            }
        }
    },
    "platform": {
        "default": "${buildKitHostOs}",
        "description": "Selects the type of platform to build for",
        "choices": {
            "win32": {
                "short": "Windows",
                "long": "Windows",
                "settings": {
                    "CPM_SOURCE_CACHE" : "${userHome}\\dev\\.cpm-cache",
                    "CPM_TOOLCHAIN_CACHE" : "${userHome}\\dev\\.cpm-toolchain-cache"
                }
            },
            "darwin": {
                "short": "MacOS",
                "long": "MacOS",
                "settings": {
                    "CPM_SOURCE_CACHE" : "${userHome}/dev/.cpm-cache",
                    "CPM_TOOLCHAIN_CACHE" : "${userHome}/dev/.cpm-toolchain-cache"
                }
            }
        }
    }    
}
